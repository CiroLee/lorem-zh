{
  "name": "lorem-zh",
  "version": "0.0.2",
  "description": "lorem text for chinese, compatible with browser and nodejs",
  "main": "lib/index.js",
  "module": "./lib/index.mjs",
  "types": "./lib/index.d.ts",
  "exports": {
    "require": "./lib/index.js",
    "import": "./lib/index.mjs"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx,json,md}": [
      "eslint --config .eslintrc.js"
    ]
  },
  "keywords": [
    "lorem",
    "mock",
    "random",
    "node",
    "utils"
  ],
  "author": "cirolee<ciromail@126.com>",
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "homepage": "https://github.com/CiroLee/lorem-zh",
  "bugs": {
    "url": "https://github.com/CiroLee/lorem-zh/issues"
  },
  "files": [
    "lib/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "commitlint": "^16.2.3",
    "eslint": "^8.12.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "prettier": "^2.6.1",
    "tsup": "^5.12.1",
    "typescript": "^4.6.3"
  }
}
